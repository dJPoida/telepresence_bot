{
  "name": "telepresence_bot",
  "version": "0.0.1",
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "A NodeJS driver for a simple home-brew Raspberry Pi telepresence robot.",
  "main": "index.ts",
  "repository": "https://github.com/dJPoida/telepresence_bot.git",
  "author": "Peter Eldred",
  "license": "MIT",
  "scripts": {
    "start": "node --unhandled-rejections=strict dist/server/main.js",
    "dev": "export NODE_ENV=development || SET NODE_ENV=development && nodemon --exec \"npx ts-node\" \"src/server/main.ts\" -P tsconfig.server.dev.json",
    "build": "export NODE_ENV=production || SET NODE_ENV=production && webpack --config webpack.config.prod.js && tsc -P tsconfig.server.prod.json",
    "build-dev": "export NODE_ENV=development || SET NODE_ENV=development && webpack --config webpack.config.dev.js && tsc -P tsconfig.server.dev.json"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/express": "^4.17.8",
    "@types/i2c-bus": "^5.1.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.0",
    "@types/pigpio": "^1.2.2",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.34",
    "@types/webpack-dev-middleware": "^3.7.2",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.1.1",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.3",
    "source-map-loader": "^1.1.1",
    "ts-loader": "^8.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.2.0"
  },
  "dependencies": {
    "@djpoida/ina219": "../@djpoida/ina219",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "i2c-bus": "^5.2.1",
    "mime-types": "^2.1.27",
    "nodemon": "^2.0.4",
    "pca9685-promise": "^1.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rpi-ws281x-native": "^0.10.0",
    "socket.io": "^2.3.0",
