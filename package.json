{
  "name": "telepresence_bot",
  "version": "0.0.1",
  "description": "A NodeJS driver for a simple home-brew Raspberry Pi telepresence robot.",
  "main": "index.ts",
  "repository": "https://github.com/dJPoida/telepresence_bot.git",
  "author": "Peter Eldred",
  "license": "MIT",
  "scripts": {
    "start": "node --unhandled-rejections=strict dist/server/main.js",
    "dev": "NODE_ENV=\"development\" nodemon --exec \"npx ts-node\" \"src/server/main.ts\" -P tsconfig.server.dev.json",
    "dev-win": "SET \"NODE_ENV=development\" && nodemon --exec \"npx ts-node\" \"src/server/main.ts\" -P tsconfig.server.dev.json",
    "dev-old": "ts-node-dev --unhandled-rejections=strict -P tsconfig.server.dev.json --debug --respawn --notify false src/server/main.ts",
    "dev:norestart": "ts-node-dev --unhandled-rejections=strict -P tsconfig.server.dev.json --debug --respawn --notify false --ignore-watch ['./*'] src/server/main.ts",
    "build": "webpack --config webpack.config.prod.js && tsc -P tsconfig.server.prod.json"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/express": "^4.17.7",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.33",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-merge": "^4.1.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.6.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.4",
    "eslint-plugin-react-hooks": "^4.0.8",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.2",
    "source-map-loader": "^1.0.1",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.0.9"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mime-types": "^2.1.27",
    "nodemon": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rpi-ws281x-native": "^0.10.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "winston": "^3.3.3"
  }
}
